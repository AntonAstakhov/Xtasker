<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.excitinglab.lifemanager">

    <!--<uses-permission android:name="android.permission.READ_CALENDAR" />-->
    <!--<uses-permission android:name="android.permission.WRITE_CALENDAR" />-->

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_temp"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_temp"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">

        <activity
            android:name="io.excitinglab.lifemanager.WelcomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme_NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="io.excitinglab.lifemanager.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme_NoActionBar" />

        <activity
            android:name="io.excitinglab.lifemanager.AddTaskActivity"
            android:label="New Task"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName="io.excitinglab.lifemanager.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="io.excitinglab.lifemanager.AddListActivity"
            android:parentActivityName="io.excitinglab.lifemanager.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="io.excitinglab.lifemanager.EditListActivity"
            android:parentActivityName="io.excitinglab.lifemanager.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="io.excitinglab.lifemanager.EditTaskActivity"
            android:label="Edit task"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName="io.excitinglab.lifemanager.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme"/>

        <activity
            android:screenOrientation="portrait"
            android:name="io.excitinglab.lifemanager.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <activity
            android:name="io.excitinglab.lifemanager.ShareActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="io.excitinglab.lifemanager.FeedbackActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.excitinglab.lifemanager.MainActivity" />
        </activity>

        <activity
            android:name="io.excitinglab.lifemanager.HelpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyTheme_NoActionBar"/>

        <receiver android:name="io.excitinglab.lifemanager.Alarm"/>

    </application>

</manifest>
