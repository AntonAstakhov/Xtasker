<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="io.excitinglab.xtasker.FeedbackActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textIssue"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textIssue"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:text="Tell us about your issue" />

    <EditText
        android:id="@+id/textIssue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Issue"
        android:inputType="text|textAutoCorrect|textAutoComplete"
        android:padding="10dp"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/textNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textIssue"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_background"
        android:hint="Description"
        android:inputType="text|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine"
        android:padding="10dp"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/buttonSendFeedback"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/mcolorPrimaryDark"
        android:text="SEND" />

</android.widget.RelativeLayout>
